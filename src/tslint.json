{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "jsx-wrap-multiline": false,
    "no-bitwise": false,
    "object-literal-sort-keys": false,
    "semicolon": [
      true,
      "always",
      "ignore-interfaces"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "jsdoc-format": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "src/serviceWorker.ts",
      "src/react-app-env.d.ts"
    ]
  }
}
